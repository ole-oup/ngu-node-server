{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "prefer-destructuring": ["warn", { "object": true, "array": false }],
    "prefer-template": "warn",
    "no-constant-condition": "off",
    "no-else-return": "warn"
  },
  "globals": {
    "BigInt": true
  }
}
