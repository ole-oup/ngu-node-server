{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "eqeqeq": "error"
  },
  "globals": {
    "BigInt": true
  }
}
